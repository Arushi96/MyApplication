<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/question_textView2"
        android:layout_width="67dp"
        android:layout_height="36dp"
        android:text="%"
        android:textAlignment="center"
        android:textSize="20sp"
         />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_margin="10dp"
        android:hint="Enter Number"
        android:inputType="numberDecimal"
        android:textAlignment="center"
        android:layout_below="@+id/question_textView2" />

    <TextView
        android:id="@+id/m_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText2"
        android:background="#B4A9AD"
        android:paddingLeft="100dp"
        android:paddingRight="100dp"
        android:text="0"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"

        android:textSize="50dp" />

    <Button
        android:id="@+id/m_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate"
        android:layout_below="@+id/m_textview" />

    <TextView
        android:id="@+id/question_textView"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:text="What is"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_below="@+id/m_button"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/question_textView3"
        android:layout_width="48dp"
        android:layout_height="45dp"
        android:text="of"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_below="@+id/question_textView"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter Percentage"
        android:inputType="numberDecimal"
        android:textAlignment="center"
        android:layout_below="@+id/question_textView3" />


</RelativeLayout>